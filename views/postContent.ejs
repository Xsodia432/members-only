<div class="posts-container">
  <% if(posts) {%> <%posts.forEach(val => { %>
  <a href="/post/<%=val.id%>/<%=val.title%>">
    <div class="post-content">
      <%if(locals.helpers.user.tier !== 2 && locals.helpers.user.tier !== null)
      {%>
      <div class="post-information-container">
        <div class="post-information">
          <div class="post-profile-circle">
            <%=val.first_name[0].toUpperCase()%><%=val.last_name ?
            val.last_name[0].toUpperCase() : "O"%>
          </div>
          <span><%=val.first_name%> <%=val.last_name%></span>
          <span class="time-stamp"
            ><%=locals.helpers.formatDate(val.timestamp)%></span
          >
        </div>
        <%if(locals.helpers.user.tier === 0){%>
        <form action="/delete/<%=val.id%>" method="POST" onsubmit="return cb()">
          <button class="btn-delete" type="">
            <span class="mdi mdi-delete"></span>
          </button>
        </form>
        <%}%>
      </div>
      <%}%>

      <h1><%=val.title%></h1>
      <div class="post-body">
        <p><%=val.post%></p>
      </div>
    </div></a
  >
  <div class="line"></div>
  <%})%> <%}%> <%if(posts.length <= 0) {%>
  <h2>No post currently</h2>
  <%}%>
</div>
